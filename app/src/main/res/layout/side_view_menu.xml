<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_menu_bg">

    <ImageView
        android:id="@+id/side_view_menu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grad_view_menu_bg"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/side_view_menu_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/sign_in_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <com.hst.spv.customview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_default_profile" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/profile_img"
            android:gravity="center">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/lato_bold"
                android:text="@string/side_menu_sign_in"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_layout"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/side_view_menu_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sign_in_layout"
                    android:layout_centerInParent="true">

                    <RelativeLayout
                        android:id="@+id/home_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/booking_history"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_side_menu_home" />

                        <TextView
                            android:id="@+id/booking_history_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/booking_history"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@id/booking_history"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/side_menu_home"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/your_spv_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/home_img"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/category"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_side_menu_spv" />

                        <TextView
                            android:id="@+id/category_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/category"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/category"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/side_menu_spv"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/gallery_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/your_spv_img"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/change_city"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_side_menu_gallery" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/change_city"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/change_city"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/side_menu_gallery"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/namakaaga_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gallery_img"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/wishlist"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_side_menu_namakaga" />

                        <TextView
                            android:id="@+id/wishlist_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/wishlist"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/wishlist"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/side_menu_nama"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/party_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/namakaaga_img"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/share"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_side_menu_party" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/share"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/share"
                            android:fontFamily="@font/lato_bold"
                            android:text="@string/side_menu_party"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rate_us_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/party_img"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/rate_us"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/rate_us"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/rate_us"
                            android:fontFamily="@font/lato_bold"
                            android:text="Rate App"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/blod_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rate_us_img"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/about_us"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_side_menu_blog" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/about_us"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/about_us"
                            android:fontFamily="@font/lato_bold"
                            android:text="Blog"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/settings_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/blod_img"
                        android:layout_centerVertical="true"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/settings"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_side_menu_settings" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/settings"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/settings"
                            android:fontFamily="@font/lato_bold"
                            android:text="Settings"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/sign_out_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_img"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/sign_out"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_side_menu_logout" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/sign_out"
                            android:layout_marginStart="20dp"
                            android:layout_toEndOf="@+id/sign_out"
                            android:fontFamily="@font/lato_bold"
                            android:gravity="center"
                            android:text="Sign Out"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/side_view_menu_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>