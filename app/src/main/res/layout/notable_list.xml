<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lay_half_rd_bg"
    android:elevation="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:gravity="start|center"
        android:background="@drawable/bg_half_round"
        android:text="@string/txt_cont"
        android:textSize="16sp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/title_txt" />

    <TextView
        android:id="@+id/notable_cont"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/txt_cont"
        android:textSize="14sp"
        android:textColor="@color/txt_content" />

</LinearLayout>

