<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.BiographyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/spv_bio" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/personal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_highlighter"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:text="@string/spv_personal"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/political"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/btn_highlighter"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:text="@string/spv_polity"
                    android:textSize="14sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/viewText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                android:enabled="true"
                android:text="@string/txt_cont"
                android:textColor="@color/txt_content"
                android:textSize="14sp">

            </TextView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>